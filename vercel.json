{
  "version": 2,
  "name": "apollo-search-backend",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "test_ui/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/favicon.ico",
      "dest": "/test_ui/favicon.ico"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico))",
      "dest": "/test_ui/$1"
    },
    {
      "src": "/",
      "dest": "/test_ui/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/test_ui/$1"
    }
  ],
  "env": {
    "MEILI_URL": "@meili_url",
    "MEILI_MASTER_KEY": "@meili_master_key", 
    "PRODUCTS_INDEX": "@products_index"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "redirects": [
    {
      "source": "/docs",
      "destination": "/api/docs",
      "permanent": false
    },
    {
      "source": "/openapi.json", 
      "destination": "/api/openapi.json",
      "permanent": false
    }
  ]
}
