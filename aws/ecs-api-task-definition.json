{
  "family": "apollo-search-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::{{ACCOUNT_ID}}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::{{ACCOUNT_ID}}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "apollo-search-api",
      "image": "{{ECR_REGISTRY}}/apollo-search-api:latest",
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "MEILI_URL",
          "value": "http://meilisearch:7700"
        },
        {
          "name": "MEILI_MASTER_KEY",
          "value": "{{MEILI_MASTER_KEY}}"
        },
        {
          "name": "PRODUCTS_INDEX",
          "value": "products"
        },
        {
          "name": "PYTHONPATH",
          "value": "/app"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/apollo-search-api",
          "awslogs-region": "{{AWS_REGION}}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8001/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
